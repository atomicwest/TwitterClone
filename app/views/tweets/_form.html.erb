<h2>New Post</h2>
<form data-tweets-ul="#feed" action="/tweets" class="tweet-compose" method="POST">
  <input
      type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>">

  <label>
    Content
    <textarea class="content" name="tweet[content]"></textarea>
  </label>
  <br>

  <p>Characters Remaining:
    <strong class="chars-left">140</strong>
  </p>

  <label>
    Mention
    <select name="tweet[mentioned_user_ids][]">
      <option></option>
      <% User.all.each do |user| %>
        <option value="<%= user.id %>"><%= user.username %></option>
      <% end %>
    </select>
  </label>
  <br>

  <input type="Submit" value="Publish Post">
</form>
